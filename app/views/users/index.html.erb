<h1>Re-Former</h1>

<ul>
    <% @users.each do |user| %>
        <li>
            <p> <%= user.username %> </p>
            <p> <%= user.password %> </p>
            <p> <%= user.email %> </p>
            <%= link_to "Edit User", edit_user_path(user) %>
            <%= link_to "Destoy User", user_path(user), data: {
                                    turbo_method: :delete,
                                    turbo_confirm: "Are you sure?"} %>
        </li>
    <% end %>
</ul>

<%= link_to "Create Account", new_user_path %>