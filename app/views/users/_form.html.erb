<%= form_with model: user do |form| %>
    <div>
        <%= form.label :username %><br>
        <%= form.text_field :username %>
        <% user.errors.full_messages_for(:user).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :password %><br>
        <%= form.text_field :password %>
        <% user.errors.full_messages_for(:user).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    
    <div>
        <%= form.label :email %><br>
        <%= form.text_field :email %>
        <% user.errors.full_messages_for(:user).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
    